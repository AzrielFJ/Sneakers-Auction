<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_foto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/jordan"
                android:background="@color/white"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/iv_foto"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:text="Rp. 20.000"
                android:textStyle="bold"
                android:fontFamily="@font/sego"
                android:layout_marginTop="10dp"
                ></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_below="@id/bt_delete"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tv_nama_barang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tv_harga"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/sego"
                android:text="Air Jordan"
                android:layout_marginTop="10dp"
                ></TextView>
<!--            <TextView-->
<!--                android:id="@+id/tv_desc"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_below="@+id/tv_nama_barang"-->
<!--                android:textColor="@color/colorAccent"-->
<!--                android:textSize="14dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                android:justificationMode="inter_word"-->
<!--                android:fontFamily="@font/sego"-->
<!--                android:text="Air Jordan 1 x Off-WHite blue size 43"-->
<!--                android:textAlignment="textStart"-->
<!--                ></TextView>-->
            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/tv_nama_barang"
                ></View>
            <ImageView
                android:id="@+id/bt_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
               android:layout_below="@id/tv_nama_barang"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/view"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                app:tint="@color/colorPrimary"></ImageView>
            <ImageView
                android:id="@+id/bt_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:layout_below="@id/tv_nama_barang"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/view"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                app:tint="@color/colorPrimary"></ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>